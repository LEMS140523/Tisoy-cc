<!DOCTYPE html>
<html lang="zxx" class="js">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Fav Icon  -->
    <link rel="shortcut icon" href="/assets/images/favicon.png">
    <!-- Site Title  -->
    <title>Dashboard | Tisoy Trading</title>
    <!-- Vendor Bundle CSS -->
    <link rel="stylesheet" href="assets/css/vendor.bundle.css?ver=111">
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="/assets/css/rap.css?ver=111">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css">
    <style>
        .btn-xs.btn-warning.active {
            background-color: #007FFF;
            color: #fff;
        }

        body {
            padding: 15px;
        }

        .user-sidebar {
            position: static;
            width: 100%;
        }

        .user-nav {
            margin-top: 20px;
        }

        .footer-bar {
            margin-top: 20px;
        }
        .logout-btn {
            float: right;
            margin-right: 10px;
            margin-top: 5px;
        }
    </style>
</head>

<body class="user-dashboard">

    <!-- Topbar -->
    <div class="container">
        <div class="logout-btn">
            <a href="/login" class="btn btn-primary">Logout</a>
        </div>
        <h1>Admin Page||<a href="/userRequest">User-Req</a></h1>
        <div class="content-container"> <!-- Added class "content-container" -->
            <div class="table-responsive"> <!-- Added class "table-responsive" -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Unique ID</th>
                            <th>Balance</th>
                            <th>Email</th>
                            <th>Password</th>
                  
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof users !== 'undefined' && users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.unique_id %></td>
                                    <td>
                                        <form action="/admin/update/<%= user._id %>" method="POST">
                                            <input type="number" name="usdtBalance" value="<%= user.usdtBalance %>">
                                            <button type="submit">Update</button>
                                        </form>
                                    </td>
                               
                                    <td><%= user.email %></td>
                                    <td><%= user.password %></td>
                      
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="no-users">No users found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- TopBar End -->
    <div class="user-wraper">
        <div class="container">
            <div class="d-flex flex-column">
                <div class="user-sidebar">
                    <div class="user-sidebar-overlay"></div>
                    <div class="user-box d-none d-lg-block">
                        <div class="gaps-1x"></div>
                    </div><!-- .user-box -->
                    <ul class="user-icon-nav">
                        <li><a href="/admin"><em class="ti ti-dashboard"></em>Users_Info</a></li>
                        <li><a href="/userRequest"><em class="ti ti-user"></em>User_Request</a></li>
                    </ul><!-- .user-icon-nav -->
                    <div class="user-sidebar-sap"></div><!-- .user-sidebar-sap -->
                    <ul class="user-nav">
                        <li>Contact Support<span>help@tisoy.cc</span></li>
                    </ul><!-- .user-nav -->
                </div><!-- .user-sidebar -->
            </div><!-- .d-flex -->
        </div><!-- .container -->
    </div>
    <!-- UserWraper End -->
    <div class="footer-bar">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <span class="footer-copyright">
                        Copyright 2023,
                        <a href="#">Tisoy Trading</a>. All Rights Reserved.
                    </span>
                </div><!-- .col -->
                <div class="col-md-5 text-md-end">
                </div><!-- .col -->
            </div><!-- .row -->
        </div><!-- .container -->
    </div>
    <!-- FooterBar End -->
    <!-- JavaScript (include all script here) -->
    <script src="assets/js/jquery.bundle.js?ver=111"></script>
    <script src="assets/js/script.js?ver=111"></script>

    <!-- Include SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
</body>

</html>
